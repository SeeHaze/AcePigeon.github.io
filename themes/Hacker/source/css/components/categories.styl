$hackerRed = #f03838
$hackerGray = #9e9e9e

article
  .categories-cloud
    width 100%
    margin 2rem 0
    text-align center
    line-height 2rem

  .categories-cloud > spannot(last-child)
    margin-right 3rem

  .categories-cloud > span
    display inline-block

  .categories-cloud > span > span
    line-height 1
    vertical-align middle

  .archive-categories .archive-title
    font-size 1.9em
    
  .archive-categories time
    margin-left: 3em

  .archive-categories .archive-post
    margin 0.2em auto

  .archive-categories > spannot(last-child)
    margin-right 3rem

  .archive-categories > span
    display inline-block

  .archive-categories > span > span
    line-height 1
    vertical-align middle

  .archive-categories, .categories-cloud
    margin 2.2rem 0
    font-size 1em
    color #9e9e9e

    a
      color $hackerGray
      &:hover
        color $hackerRed

    i
      vertical-align middle
      color #9e9e9e
      margin-right 0.5rem

    .post-categories
      margin-right 3rem

      a
        font-size 1.6rem
        &:before
          content "#"

        &:not(:last-of-type):after
          content ","
          padding-right 5px
